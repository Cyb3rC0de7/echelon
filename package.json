{
  "name": "echelon",
  "version": "1.0.0",
  "description": "Employee hierarchy management system for EPI-USE Africa",
  "main": "server/index.js",
  "engines": {
    "node": "22.x",
    "npm": "10.x"
  },
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm run dev",
    "install:server": "cd server && npm install",
    "install:client": "cd client && npm install",
    "build:client": "cd client && npm run build",
    "build": "npm run install:client && npm run build:client",
    "start": "cd server && npm start",
    "heroku-postbuild": "npm run install:server && npm run build",
    "seed": "node server/scripts/seed.js",
    "create-admin": "node server/scripts/createAdmin.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Cyb3rC0de7/echelon.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Cyb3rC0de7/echelon/issues"
  },
  "homepage": "https://github.com/Cyb3rC0de7/echelon#readme",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.10"
  }
}
